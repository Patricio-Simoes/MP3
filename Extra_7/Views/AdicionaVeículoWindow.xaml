<Window x:Class="Extra_7.Views.AdicionaVeículoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Extra_7.Views"
        mc:Ignorable="d"
        Title="Adicionar Veículo" Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <!--<Style TargetType="TextBox" x:Name="tbStyle">
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Tipo" FontWeight="SemiBold" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbTipo" Grid.Column="1" Margin="10,5,250,5" SelectionChanged="cbTipo_SelectionChanged"/>
        
        <TextBlock Text="Lotação: " Grid.Row="1" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbLotação" Grid.Row="1" Grid.Column="1" Margin="10,30,150,30"/>
        
        <TextBlock Text="Matrícula: " Grid.Row="2" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="tbMatrícula" Grid.Row="2" Grid.Column="1" Margin="10,30,150,30"/>
        
        <TextBlock x:Name="tblEixos" Text="Eixos: : " Grid.Row="3" FontWeight="SemiBold" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Hidden"/>
        <TextBox x:Name="tbEixos" Grid.Row="3" Grid.Column="1" Margin="10,30,150,30" Visibility="Hidden"/>
    </Grid>
</Window>
